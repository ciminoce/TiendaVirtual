@model TiendaVirtual.Web.ViewModels.Categoria.CategoriaListVm

@{
    ViewBag.Title = "Delete";
}

<h2>Borrar Categoría</h2>

<h3>Está seguro de borrar el registro mostrado?</h3>
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.NombreCategoria)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NombreCategoria)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CantidadProductos)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CantidadProductos)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.CategoriaId)
        <div class="form-actions no-color">
            <input type="submit" value="Borrar" class="btn btn-danger" /> |
            @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-success" })
        </div>
    }
</div>
